- provide(:title, t('.title'))

.container-fluid
  .row
    = render "layouts/control_sidebar"
    %main.col-md-9.ml-sm-auto.col-lg-10.p-3{:role => "main"}
      .card.shadow.rounded-0
        .card-header.bg-primary.text-white.rounded-0
          %h5
            = fa_icon "list", text: t(controller_name + "." + action_name + '.title')
            = link_to new_designer_designer_post_url(@designer), :class => "button button-border button-rounded button-caution pull-right bg-white" do
              = fa_icon "plus", text: Setting.systems.btn_new, right: false 
        .card-body
          .container-fluid.p-0
            .row
              .col-md-12
                %table.text-center.table-bordered.table-sm{:'data-toggle' => "table", :"data-pagination"=>"true", :"data-search" => "true",:'data-advanced-search'=>"true", :'data-id-table'=>"advancedTable"}
                  %thead.thead-light
                    %tr
                      %th{:scope => "col"} #
                    
                      %th{:scope => "col"}
                        = Setting.designer_posts.name
                      %th{:scope => "col"}
                        = Setting.designer_posts.idno
                      %th{:scope => "col"}
                  %tbody
                    - @designer_posts.each_with_index do |designer_post, index|
                      %tr
                        %td{:scope => "row"}
                          = index+1
                      
                        %td
                          = designer_post.name
                        %td
                          = designer_post.idno
                        %td
                          .container-fluid
                            .row
                              = link_to edit_designer_designer_post_url(@designer, designer_post), :class => "text-success col" do
                                = fa_icon "edit"
                              = link_to designer_designer_post_url(@designer, designer_post), :method => :delete, :data => {:confirm => "确定删除吗?"}, :class => "text-danger col" do
                                = fa_icon "trash"

