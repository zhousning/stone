.nested-fields.nestd-item
  .form-group
    .field.d-inline
    
      .form-group.row
        = f.label Setting.project_tables.category, :class => "col-sm-3 text-right"
        .col-sm-9
          = f.text_field :category, :class => "form-control"
        
      .form-group.row
        = f.label Setting.project_tables.number, :class => "col-sm-3 text-right"
        .col-sm-9
          = f.text_field :number, :class => "form-control"
        
      .form-group.row
        = f.label Setting.project_tables.name, :class => "col-sm-3 text-right"
        .col-sm-9
          = f.text_field :name, :class => "form-control"
        
      .form-group.row
        = f.label Setting.project_tables.info, :class => "col-sm-3 text-right"
        .col-sm-9
          = f.text_field :info, :class => "form-control"
        
    = link_to_remove_association "X", f, :class => "nestd-notify-badge"
