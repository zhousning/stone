.container-fluid
  = form_for [@supervisor, @supervisor_worker], :builder => WebsiteFormBuilder, :html => {:'data-parsley-validate' => true} do |f|
    - if @supervisor_worker.errors.any?
      #error_explanation.alert.alert-danger.alert-dismissible.fade.show
        %button.close{"aria-label" => "Close", "data-dismiss" => "alert", :type => "button"}
          %span{"aria-hidden" => "true"} x 
        %h2= "#{pluralize(@supervisor_worker.errors.count, "error")} prohibited this buyer from being saved:"
        %ul
          - @supervisor_worker.errors.full_messages.each do |msg|
            %li= msg
    = render 'layouts/spv_design_handle_form', f: f
