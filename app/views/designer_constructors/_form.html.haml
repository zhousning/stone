.container-fluid
  = form_for [@designer, @designer_constructor], :builder => WebsiteFormBuilder do |f|
    - if @designer_constructor.errors.any?
      #error_explanation.alert.alert-danger.alert-dismissible.fade.show
        %button.close{"aria-label" => "Close", "data-dismiss" => "alert", :type => "button"}
          %span{"aria-hidden" => "true"} x 
        %h2= "#{pluralize(@designer_constructor.errors.count, "error")} prohibited this buyer from being saved:"
        %ul
          - @designer_constructor.errors.full_messages.each do |msg|
            %li= msg
    = render 'layouts/spv_design_handle_form', f: f
