.container-fluid
  = form_for [@labour_tech, @tech_cert ], :builder => WebsiteFormBuilder do |f|
    - if @tech_cert.errors.any?
      #error_explanation.alert.alert-danger.alert-dismissible.fade.show
        %button.close{"aria-label" => "Close", "data-dismiss" => "alert", :type => "button"}
          %span{"aria-hidden" => "true"} x 
        %h2= "#{pluralize(@tech_cert.errors.count, "error")} prohibited this buyer from being saved:"
        %ul
          - @tech_cert.errors.full_messages.each do |msg|
            %li= msg
    .form-row
    
          
      .col-6
        .form-group.row
          = f.label Setting.tech_certs.cert_no, :class => "col-3 text-right col-form-label col-form-label"
          .col-9
            = f.text_field :cert_no, :class => "form-control"
          
      .col-6
        .form-group.row
          = f.label Setting.tech_certs.start, :class => "col-3 text-right col-form-label col-form-label"
          .col-9
            = f.date_field :start, :class => "form-control"
          
      .col-6
        .form-group.row
          = f.label Setting.tech_certs.dept, :class => "col-3 text-right col-form-label col-form-label"
          .col-9
            = f.select :dept, options_for_cert_dept, {:include_blank=>false}, {:class=>"form-control"}
      .col-6
        .form-group.row
          = f.label Setting.tech_certs.level, :class => "col-3 text-right col-form-label col-form-label"
          .col-9
            = f.select :level, options_for_cert_level, {:include_blank=>false}, {:class=>"form-control"}

    .form-row
      .col-12
        %h2.text-center.text-danger.bg-secondary
          注册专业选择
      - @skills.each do |skill|
        .col-3
          .form-group.row.skill-ctn
            = f.label "", :class => "col-6 text-right col-form-label col-form-label" do
              %span{:class => @skill_hash[skill.id].nil? ? "skill-name" : "skill-name bg-success" }
                = skill.name
            .col-6
              = select_tag "skill_levels", options_for_skill_level(@skill_hash[skill.id]), :include_blank=>false, :class=>"form-control skill-level-select"
              = hidden_field_tag "skill[]", @skill_hash[skill.id].nil? ? skill.id : skill.id.to_s + "," + @skill_hash[skill.id], :class => "hidden-skill"
              = hidden_field_tag "skill-val", skill.id, :class => "skill-val"

    .form-row
      .col-6
        .form-group.row
          = f.label "职称证书正面", :class => "col-3 text-right col-form-label col-form-label"
          .col-3
            %label.newbtn
              = image_tag f.one_image("cert_front"), :class => "blah"
              = f.file_field :cert_front, :accept => "image/png, image/jpeg, image/gif", :class => "select-file", :onchange => "readURL(this);"
    
      .col-6
        .form-group.row
          = f.label "职称证书正面", :class => "col-3 text-right col-form-label col-form-label"
          .col-3
            %label.newbtn
              = image_tag f.one_image("cert_back"), :class => "blah"
              = f.file_field :cert_back, :accept => "image/png, image/jpeg, image/gif", :class => "select-file", :onchange => "readURL(this);"
    

    .form-group.row
      .col-3.offset-2
        = f.submit '保存', :class => "btn btn-success"
      .col-3.offset-1
        = link_to '返回', labour_tech_tech_certs_path, :class => "btn btn-danger"
