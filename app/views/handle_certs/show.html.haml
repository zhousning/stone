- provide(:title, t('.title'))

.container-fluid
  .row
    = render "layouts/control_sidebar"
    %main.col-md-9.ml-sm-auto.col-lg-10.p-3{:role => "main"}
      .card.shadow.rounded-0
        .card-header.bg-info.text-white.rounded-0
          %h5
            = fa_icon "newspaper-o", text: t(controller_name + "." + action_name + '.title')
            = link_to "/#{controller_name}", :class => "button button-border button-rounded button-caution pull-right  bg-white" do
              = fa_icon " chevron-left", text: Setting.systems.btn_back, right: false 
            = link_to "#{request.url}/edit", :class => "button button-border button-rounded button-action pull-right mr-3 bg-white" do
              = fa_icon "edit", text: Setting.systems.btn_edit, right: false 
        .card-body
          .container-fluid
            .row
              .col-md-12
                %table.table.text-center.table-bordered
                  %thead
                    %tr
                    
                      %th 
                        = Setting.handle_certs.reg_no
                      %th 
                        = Setting.handle_certs.cert_no
                      %th 
                        = Setting.handle_certs.start
                      %th 
                        = Setting.handle_certs.end
                      %th 
                        = Setting.handle_certs.dept
                      %th 
                        = Setting.handle_certs.level
                  %tbody
                    %tr
                    
                      %td
                        = @handle_cert.reg_no
                      %td
                        = @handle_cert.cert_no
                      %td
                        = @handle_cert.start
                      %td
                        = @handle_cert.end
                      %td
                        = @handle_cert.dept
                      %td
                        = @handle_cert.level
            
              .col-md-2
                = image_tag @handle_cert.cert_front_url
            
              .col-md-2
                = image_tag @handle_cert.cert_back_url
            
              .col-md-2
                = image_tag @handle_cert.start_front_url
            
              .col-md-2
                = image_tag @handle_cert.start_back_url
            
              .col-md-2
                = image_tag @handle_cert.safe_front_url
            
              .col-md-2
                = image_tag @handle_cert.safe_back_url
            
            
            
            
            

